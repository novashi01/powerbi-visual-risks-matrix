{
  "dataRoles": [
    { "displayName": "Risk ID", "name": "riskId", "kind": "Grouping" },
    { "displayName": "Inherent Likelihood", "name": "likelihoodInh", "kind": "Measure" },
    { "displayName": "Inherent Consequence", "name": "consequenceInh", "kind": "Measure" },
    { "displayName": "Residual Likelihood", "name": "likelihoodRes", "kind": "Measure" },
    { "displayName": "Residual Consequence", "name": "consequenceRes", "kind": "Measure" },
    { "displayName": "Category", "name": "category", "kind": "Grouping" },
    { "displayName": "Tooltips", "name": "tooltips", "kind": "Measure" }
  ],
  "objects": {
    "dataPoint": {
      "properties": {
        "defaultColor": { "type": { "fill": { "solid": { "color": true } } } },
        "showAllDataPoints": { "type": { "bool": true } },
        "fill": { "type": { "fill": { "solid": { "color": true } } } },
        "fillRule": { "type": { "fill": {} } },
        "fontSize": { "type": { "formatting": { "fontSize": true } } }
      }
    },
    "severity": {
      "displayName": "Severity colors",
      "properties": {
        "low": { "displayName": "Low", "type": { "fill": { "solid": { "color": true } } } },
        "moderate": { "displayName": "Moderate", "type": { "fill": { "solid": { "color": true } } } },
        "high": { "displayName": "High", "type": { "fill": { "solid": { "color": true } } } },
        "extreme": { "displayName": "Extreme", "type": { "fill": { "solid": { "color": true } } } }
      }
    },
    "thresholds": {
      "displayName": "Severity thresholds",
      "properties": {
        "lowMax": { "displayName": "Low max", "type": { "numeric": true } },
        "moderateMax": { "displayName": "Moderate max", "type": { "numeric": true } },
        "highMax": { "displayName": "High max", "type": { "numeric": true } }
      }
    },
    "axes": {
      "displayName": "Axis Labels",
      "properties": {
        "showXLabels": { "displayName": "Show X-axis labels (Consequence)", "type": { "bool": true } },
        "showYLabels": { "displayName": "Show Y-axis labels (Likelihood)", "type": { "bool": true } },
        "showAxisTitles": { "displayName": "Show axis titles", "type": { "bool": true } },
        "xAxisTitle": { "displayName": "X-axis title", "type": { "text": true } },
        "yAxisTitle": { "displayName": "Y-axis title", "type": { "text": true } },
        "xAxisFontSize": { "displayName": "X-axis font size", "type": { "numeric": true } },
        "yAxisFontSize": { "displayName": "Y-axis font size", "type": { "numeric": true } },
        "yAxisOrientation": { "displayName": "Y-axis text orientation", "type": { "enumeration": [
          { "displayName": "Horizontal", "value": "horizontal" },
          { "displayName": "Vertical", "value": "vertical" }
        ] } },
        "xLabel1": { "displayName": "X-axis label 1 (Consequence)", "type": { "text": true } },
        "xLabel2": { "displayName": "X-axis label 2 (Consequence)", "type": { "text": true } },
        "xLabel3": { "displayName": "X-axis label 3 (Consequence)", "type": { "text": true } },
        "xLabel4": { "displayName": "X-axis label 4 (Consequence)", "type": { "text": true } },
        "xLabel5": { "displayName": "X-axis label 5 (Consequence)", "type": { "text": true } },
        "yLabel1": { "displayName": "Y-axis label 1 (Likelihood)", "type": { "text": true } },
        "yLabel2": { "displayName": "Y-axis label 2 (Likelihood)", "type": { "text": true } },
        "yLabel3": { "displayName": "Y-axis label 3 (Likelihood)", "type": { "text": true } },
        "yLabel4": { "displayName": "Y-axis label 4 (Likelihood)", "type": { "text": true } },
        "yLabel5": { "displayName": "Y-axis label 5 (Likelihood)", "type": { "text": true } }
      }
    },
    "markers": {
      "displayName": "Markers",
      "properties": {
        "size": { "displayName": "Marker size", "type": { "numeric": true } },
        "color": { "displayName": "Marker color override", "type": { "fill": { "solid": { "color": true } } } }
      }
    },
    "labels": {
      "displayName": "Labels",
      "properties": {
        "show": { "displayName": "Show labels", "type": { "bool": true } },
        "fontSize": { "displayName": "Label size", "type": { "formatting": { "fontSize": true } } }
      }
    },
    "arrows": {
      "displayName": "Arrows",
      "properties": {
        "show": { "displayName": "Show arrows", "type": { "bool": true } },
        "arrowSize": { "displayName": "Arrow size", "type": { "numeric": true } },
        "arrowDistance": { "displayName": "Distance from markers", "type": { "numeric": true } },
        "arrowColor": { "displayName": "Arrow color", "type": { "fill": { "solid": { "color": true } } } },
        "arrowTransparency": { "displayName": "Arrow transparency (%)", "type": { "numeric": true } }
      }
    },
    "tooltips": {
      "displayName": "Tooltips",
      "properties": {
        "show": { "displayName": "Show tooltips", "type": { "bool": true } }
      }
    },
    "animation": {
      "displayName": "Animation",
      "properties": {
        "enabled": { "displayName": "Enable animation", "type": { "bool": true } },
        "durationMs": { "displayName": "Duration (ms)", "type": { "numeric": true } }
      }
    },
    "matrixGrid": {
      "displayName": "Matrix Grid",
      "properties": {
        "matrixRows": { "displayName": "Matrix rows", "type": { "numeric": true } },
        "matrixColumns": { "displayName": "Matrix columns", "type": { "numeric": true } }
      }
    },
    "riskMarkersLayout": {
      "displayName": "Risk Markers Layout",
      "properties": {
        "layoutMode": { 
          "displayName": "Positioning mode", 
          "type": { 
            "enumeration": [
              { "displayName": "Organized Grid", "value": "organized" },
              { "displayName": "Random Scatter", "value": "scatter" },
              { "displayName": "Centered", "value": "centered" }
            ]
          }
        },
        "markerRows": { "displayName": "Marker rows (per cell)", "type": { "numeric": true } },
        "markerColumns": { "displayName": "Marker columns (per cell)", "type": { "numeric": true } },
        "cellPadding": { "displayName": "Cell padding", "type": { "numeric": true } },
        "showInherentInOrganized": { "displayName": "Show inherent risks", "type": { "bool": true } },
        "inherentTransparency": { "displayName": "Inherent transparency (%)", "type": { "numeric": true } },
        "organizedArrows": { "displayName": "Show arrows in organized mode", "type": { "bool": true } }
      }
    }
  },
  "dataViewMappings": [
    {
      "categorical": {
        "categories": {
          "for": { "in": "riskId" },
          "dataReductionAlgorithm": { "top": {} }
        },
        "values": {
          "group": {
            "by": "category",
            "select": [
              { "bind": { "to": "likelihoodInh" } },
              { "bind": { "to": "consequenceInh" } },
              { "bind": { "to": "likelihoodRes" } },
              { "bind": { "to": "consequenceRes" } },
              { "bind": { "to": "tooltips" } }
            ],
            "dataReductionAlgorithm": { "top": {} }
          }
        }
      }
    }
  ],
  "supportsHighlight": true,
  "privileges": []
}
